{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "array",
    "minLength": 1,
    "items": {
        "type": "object",
        "properties": {
            "codes": {
                "type": "array",
                "items": {
                    "type": "string",
                    "minLength": 1,
                    "maxLength": 3,
                    "pattern": "[A-Z\\d]+"
                }
            },
            "description": {
                "type": "string",
                "minLength": 4
            }
        },
        "additionalProperties": false
    }
}
